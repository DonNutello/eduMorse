# vim: set filetype=python:
import os

env = Environment()
MORSELABPATH = os.environ.get("MORSELABPATH")
CBINDINGSPATH = os.path.join(MORSELABPATH, "libraries/cBindings")
env.Append(LIBPATH=CBINDINGSPATH)
env.Append(CPPPATH=CBINDINGSPATH)

t = env.Program('main', 'main.c', LIBS=['cBindings', 'm'])

env.NoClean('main')
